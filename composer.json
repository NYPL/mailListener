{
  "name": "mailListener",
  "description": "NYPL General Stream Mailer",
  "require": {
    "nypl/microservice-starter": "^1.0.0",
    "twig/twig": "2.3.2"
  },
  "require-dev": {
    "phpunit/phpunit": "7.2.7",
    "satooshi/php-coveralls": "2.0.0",
    "squizlabs/php_codesniffer": "3.3.0"
  },
  "autoload": {
    "psr-4": {
      "NYPL\\Services\\": [ "src/" ]
    }
  },
  "scripts": {
    "post-update-cmd": [
      "php -r \"copy('vendor/nypl/microservice-starter/scripts/listener.js', 'listener.js');\""
    ]
  }
}
