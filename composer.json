{
  "name": "nypl/mail-listener",
  "description": "NYPL Mail Listener",
  "require": {
    "nypl/microservice-starter": "1.2.24",
    "twig/twig": "2.3.2",
    "guzzlehttp/guzzle": "7.6.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10",
    "php-coveralls/php-coveralls": "^2.7.0",
    "squizlabs/php_codesniffer": "3.5.0"
  },
  "autoload": {
    "psr-4": {
      "NYPL\\Services\\": [ "src/" ]
    }
  },
  "scripts": {
    "post-update-cmd": [
      "php -r \"copy('vendor/nypl/microservice-starter/scripts/listener.js', 'listener.js');\""
    ]
  }
}
